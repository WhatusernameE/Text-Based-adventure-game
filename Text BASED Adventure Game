#These will not be the 20 questions

def ohio():
    computer = random.randint(1, 2)
    ohio = input("DO you want to live!?!?! ")
    if computer == 1:
        print("No? Great! You're living in oH10 now! :) ")
    else:
        print((ohio.capitalize()) + ", you're still living in oH10 You can never leave oH10 :):):):):):)")


ohio()

